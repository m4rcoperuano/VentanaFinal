@model VentanaFinal.Models.Account.LoginModel

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="login-container panel panel-default">
                <div class="text-center panel-heading">
                    <h2 class="panel-title">Login</h2>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(x => x.Email, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-9">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                                <div class="validation-errors">
                                    @Html.ValidationMessageFor(x=>x.Email)
                                </div>
                            </div>
                        </div>
                    
                        <div class="form-group">
                            @Html.LabelFor(x => x.Password, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-9">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                                <div class="validation-errors">
                                    @Html.ValidationMessageFor(x=>x.Password)
                                </div>
                            </div>
                        </div>
                    
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-9">
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(x => x.RememberMe)
                                        Remember me
                                    </label>
                                </div>
                            </div>
                        </div>
                    
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-9">
                                <button type="submit" class="btn btn-primary">Sign in</button>
                                <a href="@Url.Action("Register", "Account")" class="btn btn-success">
                                    Register
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('#nav-account').addClass('active');
        });
    </script>
}